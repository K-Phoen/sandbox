<?xml version="1.0" encoding="utf-8"?>
<database name="default" defaultIdMethod="native" namespace="Sonata\Bundle\DemoBundle\Model">

    <table name="test_car" phpName="Car" idMethod="native">
        <column name="id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true" />
        <column name="name" type="VARCHAR" size="100" required="true" primaryString="true" />
        <column name="engine_id" type="INTEGER" required="true" />
        <column name="rescue_engine_id" type="INTEGER" required="true" />

        <column name="discr" type="INTEGER" inheritance="single">
            <inheritance key="1" class="Car" />
            <inheritance key="2" class="Renault" extends="Car" />
            <inheritance key="3" class="Citroen" extends="Car" />
            <inheritance key="4" class="Peugeot" extends="Car" />
        </column>

        <foreign-key foreignTable="test_car_engine" phpName="Engine" onDelete="cascade">
            <reference local="engine_id" foreign="id" />
        </foreign-key>
        <foreign-key foreignTable="test_car_engine" phpName="RescueEngine" onDelete="cascade">
            <reference local="rescue_engine_id" foreign="id" />
        </foreign-key>

        <behavior name="timestampable" />
    </table>

    <table name="test_car_engine" phpName="Engine" idMethod="native">
        <column name="id" type="INTEGER" primaryKey="true" autoIncrement="true" required="true" />
        <column name="name" type="VARCHAR" size="100" required="true" primaryString="true" />
        <column name="power" type="INTEGER" required="true" />
    </table>

</database>
