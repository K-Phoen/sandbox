{
    "name": "sonata-project/sandbox",
    "description": "Sonata Project's sandbox",

    "autoload": {
        "psr-0": { "": "src/" }
    },

    "license": "MIT",

    "require": {
        "php": ">=5.3.3",

        "twig/twig": "~1.12",
        "twig/extensions": "~1.0",

        "symfony/symfony": "~2.3",
        "symfony/assetic-bundle": "~2.3",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/monolog-bundle": "~2.3",

        "sensio/distribution-bundle": "~2.3",
        "sensio/framework-extra-bundle": "~2.3",
        "sensio/generator-bundle": "~2.3",

        "jms/security-extra-bundle": "~1.5",
        "jms/di-extra-bundle": "~1.4",

        "symfony-cmf/routing-bundle": "1.1.*@dev",
        "symfony-cmf/routing": "1.1.*@dev",

        "knplabs/gaufrette": "0.1.4",
        "knplabs/knp-menu-bundle": "1.1.x-dev",
        "knplabs/knp-markdown-bundle": "1.2.*@dev",

        "propel/propel-bundle": "1.2.x",
        "willdurand/propel-typehintable-behavior": "1.*",

        "sonata-project/intl-bundle": "~2.1",
        "sonata-project/block-bundle": "~2.2",
        "sonata-project/propel-admin-bundle": "dev-fix-relations-descriptions",
        "sonata-project/exporter": "dev-master as 1.3.2",
        "sonata-project/user-bundle": "dev-propel",
        "friendsofsymfony/user-bundle": "dev-fix-supported-entities-checks as 1.3.3"
    },

    "require-dev": {
        "phpunit/phpunit": "~3.7",
        "guzzle/guzzle": "~3.0"
    },


    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/K-Phoen/SonataUserBundle.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/K-Phoen/FOSUserBundle.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/K-Phoen/SonataPropelAdminBundle.git"
        }
    ],

    "scripts": {
        "post-install-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ]
    },

    "config": {
        "bin-dir": "bin"
    },

    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.3.x-dev"
        }
    }
}
